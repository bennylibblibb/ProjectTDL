                    <Border Margin="0,0,10,0" x:Name="brCallS" Grid.Column="0"  Grid.ColumnSpan="4" Grid.Row="1" BorderBrush="Black" HorizontalAlignment="Center" BorderThickness="0,0,1,0">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="23"/>
                                <RowDefinition Height="0"/>
                                <!--<RowDefinition Height="Auto"/>-->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
