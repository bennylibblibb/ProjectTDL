                <Setter Property="DataGridCell.HorizontalAlignment" Value="Stretch" />
                <Setter Property="DataGridCell.HorizontalContentAlignment" Value="Right" />
                <Setter Property="TextBlock.TextAlignment" Value="Right" />
                <!--<Setter Property="TextBlock.TextAlignment" Value="Right" />-->
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=bNagativePL}" Value="true">
                        <Setter Property="DataGridCell.Foreground" Value="Red"  />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=bNagativePL}" Value="False">
                        <Setter Property="DataGridCell.Foreground" Value="Green" />
                    </DataTrigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="Yellow"/>
                        <!--WHEN UNSELECTED,FOREGROUND SHOULE LightGreen BE CHANGE LightGoldenrodYellow BACK,IF NOT,WHEN BACKGROUND WHITE,NOTHING SEEN-->
                    </Trigger>
                </Style.Triggers>
            </Style>
