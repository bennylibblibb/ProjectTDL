            <Style x:Name="CustomStyle" TargetType="ToggleButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <StackPanel>
                                <Image Name="img" Source="/GOSTS;component/Images/ribbtn_lock_open.png"/>
                                <TextBlock Text="ToggleButton"/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="ToggleButton.IsChecked" Value="True">
                                    <Setter TargetName="img" Property="Source" Value="/GOSTS;component/Images/ribbtn_lock_locked.png"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style  TargetType="DataGridRow">
                <Setter Property="Background" Value="#F2F2F2" />
                <Setter Property="Height" Value="25"/>
                <!--<Setter Property="Foreground" Value="Black" />-->
                <Style.Triggers>
                    <!--隔行换色e7e7e7#FFFFDA89-->
                    <Trigger Property="AlternationIndex" Value="0" >
                        <Setter Property="Background" Value="#ffffff" />
                    </Trigger>
                    <Trigger Property="AlternationIndex" Value="1" >
                        <Setter Property="Background" Value="LightYellow" />
                    </Trigger>

                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="LightGray"/>
                        <!--<Setter Property="Foreground" LightYellow Value="White"/>-->
                    </Trigger>

                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Foreground" Value="Black"/>

                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="DataGridCell" BasedOn="{StaticResource dgCellBg_Gradient}" x:Key="dgCellStyle_BS">               
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=bors}" Value="b">
                        <Setter Property="DataGridCell.Foreground" Value="Blue" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=bors}" Value="s">
                        <Setter Property="DataGridCell.Foreground" Value="Red" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=bors}" Value="o">
                        <Setter Property="DataGridCell.Foreground" Value="Black" />
                    </DataTrigger>
                    <Trigger Property="IsSelected" Value="True">
                        <!--<Setter Property="Foreground" Value="Black"/>-->
                        <Setter Property="Background" Value="Yellow"/>
                        <!--Yellow-->                       
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="DataGridCell"  BasedOn="{StaticResource dgCellBg_Gradient}" x:Key="dgCellStylePos">
                <Setter Property="DataGridCell.Foreground" Value="Black"></Setter>
                <!--<Setter Property="Background" Value="{StaticResource dgcellBgBrush}" />-->
                <Style.Triggers>
                    <!--<DataTrigger Binding="{Binding Path=bors}" Value="b">
                    <Setter Property="DataGridCell.Foreground" Value="Blue" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=bors}" Value="s">
                    <Setter Property="DataGridCell.Foreground" Value="Red" />
                </DataTrigger>-->
                    <Trigger Property="IsSelected" Value="True">
                        <!--<Setter Property="Foreground" Value="White"/>-->
                        <Setter Property="Background" Value="Yellow"/>
                        <!--WHEN UNSELECTED,FOREGROUND SHOULE LightGreen BE CHANGE LightGoldenrodYellow BACK,IF NOT,WHEN BACKGROUND WHITE,NOTHING SEEN-->
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="DataGridCell"  BasedOn="{StaticResource dgCellBg_Gradient}"  x:Key="dgCellNegativeStyle">
