<UserControl x:Class="GOSTS.Accounts.ucMaskMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <DockPanel   Background="{Binding BG}"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ><!--#B5EEEEEE-->

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="" Name="txtMsg" TextWrapping="Wrap" FontFamily="Cambria" FontSize="{Binding FSize}"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Border BorderThickness="0,1,0,0" BorderBrush="#ccc" Grid.Row="1"></Border>
            <Button Grid.Row="1" Content="OK" BorderBrush="#666" BorderThickness="0.5" HorizontalAlignment="Center" Background="#eee" Width="60" Click="Button_Click" ></Button>
        </Grid>

    </DockPanel>
</UserControl>
